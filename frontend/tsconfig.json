{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "module": "es2015",
        "moduleResolution": "bundler",
        "emitDeclarationOnly": true,
        "declaration": true,
        "composite": true,
        "noEmit": false,
        "allowImportingTsExtensions": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx"
    },
    "baseUrl": "./src"
}